@using MotorRegister.Api
@using MotorRegister.Core.Entities
@typeparam TItem

<table class="table">
    <thead>
    <tr>
        <th>Type</th>
        <th>Usage</th>
        <th>Registration Number</th>
        <th>Manufacturer</th>
        <th>Model</th>
        <th>Variant</th>
    </tr>
    </thead>
    <tbody>
    @if (Vehicles != null && Vehicles.Any())
    {
        foreach (var vehicle in Vehicles)
        {
            <tr>
                <td>@vehicle.VehicleTypeName</td>
                <td>@vehicle.Usage</td>
                <td>@vehicle.RegistrationNumber</td>
                <td>@vehicle.Designation.ManufacturerName</td>
                <td>@vehicle.Designation.Model</td>
                <td>@vehicle.Designation.Variant</td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="6">No vehicles found</td>
        </tr>
    }
    </tbody>
</table>

@code {
    [Parameter] 
    public List<VehicleDTO> Vehicles { get; set; }
}